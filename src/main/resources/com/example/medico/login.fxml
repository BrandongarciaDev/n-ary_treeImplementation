                        <Cursor fx:constant="HAND" />
                     </cursor></Button>

               </children></Pane>
            <ImageView fitHeight="278.0" fitWidth="451.0" layoutX="559.0" layoutY="51.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@loginImage.jpg" />
               </image>
            </ImageView>
            <TextField fx:id="user_access" layoutX="645.0" layoutY="351.0" prefHeight="39.0" prefWidth="245.0" promptText="Ingresa tu usuario" />
