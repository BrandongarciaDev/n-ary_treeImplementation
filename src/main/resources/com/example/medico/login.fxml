<VBox prefHeight="665.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.medico.UserAuth">
   <children>
      <Pane prefHeight="666.0" prefWidth="1111.0" style="-fx-background-color: #FFF;">
         <children>
            <Pane layoutX="-11.0" prefHeight="665.0" prefWidth="407.0" style="-fx-background-color: #219ebc;">
