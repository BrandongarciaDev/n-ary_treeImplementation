                  <Font name="Lucida Sans Unicode" size="18.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Label fx:id="login_error" layoutX="645.0" layoutY="507.0" prefHeight="21.0" prefWidth="245.0" textFill="RED">
               <font>
                  <Font name="Lucida Sans Unicode" size="12.0" />
               </font>
            </Label>
            <ImageView fitHeight="26.0" fitWidth="26.0" layoutX="609.0" layoutY="356.0" opacity="0.76" pickOnBounds="true" smooth="false">
               <image>
                  <Image url="@usuario_login.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="26.0" fitWidth="26.0" layoutX="609.0" layoutY="437.0" opacity="0.76" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@bloquear.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="73.0" fitWidth="192.0" layoutX="890.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
